{{>layout/header}}
<div class="container">
<table class="table table-condensed">
    <thead>
    <tr>
        <th scope="col" style="width: 10%">게시글번호</th>
        <th scope="col" style="width: 50%">제목</th>
        <th scope="col" style="width: 20%">작성자</th>
        <th scope="col" style="width: 20%">최종수정일</th>
    </tr>
    </thead>
    <tbody>
    {{#posts}}
        <tr>
            <th scope="row">{{id}}</th>
            <td><a href="/post/view/{{id}}" class="text-decoration-none text-reset">{{title}}</a></td>
            <td>{{author}}</td>
            <td>{{modifiedTime}}</td>
        </tr>
    {{/posts}}
    </tbody>
</table>
</div>
<div class="container">
<nav>
    <ul class="pagination justify-content-center">
        {{#pagination.prev}}
        <li class="page-item"><a class="page-link" href="/?pageId={{pagination.prevVal}}">{{pagination.prevVal}}</a></li>
        {{/pagination.prev}}
        <li class="page-item active">
            <a class="page-link" href="/?pageId={{pagination.curVal}}">{{pagination.curVal}}</a>
        </li>
        {{#pagination.next}}
            <li class="page-item"><a class="page-link" href="/?pageId={{pagination.nextVal}}">{{pagination.nextVal}}</a></li>
        {{/pagination.next}}
    </ul>
</nav>
</div>
{{>layout/footer}}
